# Ensure that a non-login, non-interactive shell has a defined environment.
if [[ ( "$SHLVL" -eq 1 && ! -o LOGIN ) && -s "${ZDOTDIR:-$HOME}/.zprofile" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprofile"
fi

export MANPATH="/usr/local/opt/man-db/lib/share/man:/usr/local/opt/coreutils/libexec/gnuman:/usr/local/opt/bash/share/man:/usr/local/opt/make/libexec/share/man:/usr/share/man:$MANPATH:$HOME/.npm-global/share/man"

path=(
    $HOME/bin
    $HOME/.local/bin
    $HOME/.cargo/bin
    $HOME/.npm-global/bin
    /Library/TeX/texbin/
    /usr/local/opt/man-db/libexec/bin
    /usr/local/opt/git/bin
    /usr/local/opt/coreutils/libexec/gnubin
    /usr/local/opt/gnu-tar/libexec/gnubin
    /usr/local/opt/bash/bin
    /usr/local/opt/make/libexec/gnubin
    /usr/local/sbin
    /usr/local/bin
    /usr/bin
    /bin
    /usr/sbin
    /sbin
)

typeset -gU cdpath fpath mailpath manpath path
export path

export DEVDB_HOST=devdb.db.cj.com
export DEVDB_USERNAME=spud
export DEVDB_PORT=1521
export DEVDB_SID=devdb
export DEVDB_USER=spud
export BUILD_USER=spud

alias gcc="gcc-9"

# what is this for
#export cj_softwareHome=$HOME/cj-projects/software

export MAVEN_OPTS="-Xmx8G -Xss3m -XX:ReservedCodeCacheSize=256m"

#export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_221.jdk/Contents/Home
export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)
