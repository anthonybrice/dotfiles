Config { font = "xft:Oswald-Medium:size=14:antialias=true:hinting=true:style=bold"
       -- MerriweatherSans might work
       , bgColor = "#BAE4EE"
       , fgColor = "#292929"
       , position = Top
       --, lowerOnStart = True
       , hideOnStart = False
       , commands = [ Run BatteryP ["BAT0"] [ "-t", "Batt: <left>% / <timeleft>"
                                            ,"--"
                                            , "-H", "50"
                                            , "-m", "#00800"
                                            ] 20
                    , Run Date "%a, %b %d, %Y | %l:%M %P" "date" 10
                    , Run UnsafeStdinReader
                    , Run Volume "default" "Master" [ "--template" , "<action=`amixer -q set Master toggle`>Vol: <status></action>"
                                                    , "--"
                                                    , "-c"         , "#292929"
                                                    , "-o"         , "[off]"
                                                    , "-C"         , "#292929"
                                                    , "-O"         , "<volume> [on]"
                                                    ] 10
                    , Run Wireless "wlp3s0" [] 20
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %UnsafeStdinReader% } %date% { %default:Master% | %battery% | %wlp3s0wi% "
       }
