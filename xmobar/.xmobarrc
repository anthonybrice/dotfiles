Config { font = "xft:enriqueta:size=15:antialias=true:hinting=true:style=Bold"
       -- , bgColor = "#bae4ee"
       -- , fgColor = "black"
       , bgColor = "#BAE4EE"
       , fgColor = "#292929"
       -- , border = BottomB
       -- , borderColor = "#E0E0E0"
       , position = Top
       , lowerOnStart = True
       , hideOnStart = False
       , commands = [ Run BatteryP ["BAT0"] [ "-t", "Batt: <watts>, <left>% / <timeleft>"
                                            -- , "-L", "10"
                                            -- , "-H", "80"
                                            -- , "--", "-O", "<fc="#007a7c">On</fc> - "
                                            -- , "-i", ""
                                            -- , "-L", "-15"
                                            -- , "-H", "-5"
                                            -- , "-l", "red"
                                            -- , "-m", "blue"
                                            -- , "-h", "#007a7c"
                                            , "--"
                                            , "-O", "<fc=#007a7c>On</fc> - "
                                            , "-i", ""
                                            ] 60
                    , Run Date "%a, %b %d, %Y | %l:%M %P" "date" 10
                    , Run UnsafeStdinReader
                    , Run DynNetwork     [ "--template" , "<dev>: <tx>kBps/<rx>kBps"
                                         , "--Low"      , "1000"       -- units: kB/s
                                         , "--High"     , "5000"       -- units: kB/s
                                         , "--low"      , "#1460aa"
                                         , "--normal"   , "#aa00aa"
                                         , "--high"     , "#b22222"
                                         ] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %UnsafeStdinReader% } %date% { %battery% | %dynnetwork%                                         "
       }
